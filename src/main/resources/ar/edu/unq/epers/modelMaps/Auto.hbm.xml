<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/hibernate-mapping-3.0.dtd">
 
<hibernate-mapping>
    <class name="ar.edu.unq.epers.model.Auto" table="Autos" >
    
        <id name="id" type="java.lang.Integer">
            <column name="ID" />
            <generator class="identity" />
        </id>

        <property name="marca" type="string">
            <column name="marca" length="20" not-null="false" unique="false" />
        </property>
        <property name="modelo" type="string">
            <column name="modelo" length="20" not-null="false" unique="false" />
        </property>
        <property name="anio" type="Integer">
            <column  name="anio" not-null="false" unique="false"/>
        </property>
        <property name="patente" type="string">
            <column  name="string" not-null="false" unique="true"/>
        </property>
        
        <property name="costoBase" type="Double">
            <column  name="costo base" not-null="false" unique="false"/>
        </property>
    </class>
</hibernate-mapping>

